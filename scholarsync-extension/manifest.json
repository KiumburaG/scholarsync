{
  "manifest_version": 3,
  "name": "ScholarSync",
  "version": "1.0.0",
  "description": "AI-powered scholarship application assistant - autofill forms, generate essays, track applications",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:4000/*",
    "https://*.scholarships.com/*",
    "https://*.fastweb.com/*",
    "https://*.bold.org/*",
    "https://*.cappex.com/*",
    "https://*.niche.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.scholarships.com/*",
        "https://*.fastweb.com/*",
        "https://*.bold.org/*",
        "https://*.cappex.com/*",
        "https://*.niche.com/*",
        "http://localhost:3000/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
